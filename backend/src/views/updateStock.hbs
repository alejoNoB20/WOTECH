{{{layout}}}

{{{body}}}

  <h1>{{title}}: {{resultado.name_material}}</h1>
  <a href="/stock" class="btn btn-primary p-2 m-2">Volver</a>
  <form action="/stock/update/{{resultado.id_material}}" method="post" id="searchForm ">
    <div class="mb-3">
      <label for="materialName" class="form-label">Nombre del Producto*</label>
      <input type="text" class="form-control" id="name_material" name="name_material" value="{{resultado.name_material}}" required>
    </div>
    <div class="mb-3">
      <label for="materialDescription" class="form-label">Descripci√≥n del Producto</label>
      <textarea class="form-control" id="description_material" name="description_material" rows="3" value="{{resultado.description_material}}"></textarea>
    </div>
    <div class="mb-3">
      <label for="purchasePrice" class="form-label">Precio de Compra*</label>
      <input type="number" class="form-control" id="buy_price_material" name="buy_price_material" step="0.01" value="{{resultado.buy_price_material}}" required>
    </div>
    <div class="mb-3">
      <label for="quantity" class="form-label">Cantidad*</label>
      <input type="number" class="form-control" id="amount_material" name="amount_material" value="{{resultado.amount_material}}" required>
    </div>
      {{#if resultado.contains}}
    <div class="form-check">
      <label for="contains" class="form-check-label">Contiene...</label>
      <input type="checkbox"class="form-check-input" id="contains" name="contains" checked>
    </div>
    <div class="mb-3">
      <label for="howMuchContains" class="form-label">Cantidad del contenido*</label>
      <input type="number" class="form-control" id="howMuchContains" name="how_much_contains" value="{{resultado.how_much_contains}}">
    </div>
      {{else}}
          <div class="form-check">
      <label for="contains" class="form-check-label">Contiene...</label>
      <input type="checkbox"class="form-check-input" id="contains" name="contains">
    </div>
    <div class="mb-3">
      <label for="howMuchContains" class="form-label">Cantidad del contenido*</label>
      <input type="number" class="form-control" id="howMuchContains" name="how_much_contains" disabled>
    </div>
      {{/if}}
    <button type="submit" class="btn btn-primary">Cargar Producto</button>
  </form> 

  <script type="module" src="/javaScript/stock.js"></script>