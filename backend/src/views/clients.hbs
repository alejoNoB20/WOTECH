{{{layout}}}

{{{body}}}

  <div class="container">
    <h1 class="mb-2 fs-1">{{title}}</h1>
  </div>

  <div class="container">
    <div class="row">
      <form action="/clients/search/" method="get" class="d-flex">
      <div class="col">
        <label for="browser"class="form-label fs-2">Buscar cliente por su</label>
      </div>
      <div class="col-2">
        <select class="form-select col" name="search_type" id="search_type">
          <option value="name_client" selected>Nombre</option>
          <option value="last_name_client">Apellido</option>
          <option value="id_client">ID</option>
          <option value="dni_client">DNI</option>
          <option value="cuil_or_cuit_client">CUIL/CUIT</option>          
          <option value="type_client">Tipo de cliente</option>
        </select> 
      </div>
      <div class="col" id="div_search_value">
        <input type="text" id="search_value" name="search_value" class="form-input col">
      </div>
      <div class="col">
        <button type="submit" class="btn btn-primary p-3 fs-4" id="searchButton" disabled>Buscar</button>
      </div>
      </form>
    </div>
  </div>

  <a type="button" class="btn btn-success" href="/clients/create">Crear nuevo cliente</a>

    {{#if resultado}}
    <table class="table mt-2">
      <thead>
        <tr class="table-primary">
          <th scope="col" class="text-center">ID</th>
          <th scope="col" class="text-center">Nombre</th>
          <th scope="col" class="text-center">Apellido</th>
          <th scope="col" class="text-center">Tipo de cliente</th>
          <th scope="col" class="text-center">Provincia</th>
          <th scope="col" class="text-center">Direccion</th>
          <th scope="col" class="text-center">Mail</th>
          <th scope="col" class="text-center">Número de teléfono</th>
          <th scope="col" class="text-center">DNI</th>
          <th scope="col" class="text-center">CUIL/CUIT</th>
          <th scope="col" class="text-center">#</th>
        </tr>
      </thead>
      <tbody>
        {{#each resultado}}
          <tr class="table-secondary clients">
            <th scope="row" class="text-center">{{this.id_client}}</th>
            <td class="text-center">{{this.name_client}}</td>
            <td class="text-center">{{this.last_name_client}}</td>
            <td class="text-center type_client">{{this.type_client}}</td>
            <td class="text-center">{{this.province_client}}</td>
            <td class="text-center">{{this.direction_client}}</td>          
            <td class="text-center">{{this.mail_client}}</td>
            <td class="text-center">{{this.phone_number_client}}</td>
            <td class="text-center">{{this.dni_client}}</td>
            <td class="text-center">{{this.cuil_or_cuit_client}}</td>
            <td class="text-center">
                <a type="button" class="btn btn-warning mb-2" href="/clients/update/{{this.id_client}}">Actualizar</a>
                <a type="button" class="btn btn-danger" href="/clients/delete/{{this.id_client}}">Eliminar</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
      <h1 class="mt-3">{{message}}</h1>
  {{/if}}

  <script type="module" src="/javaScript/clients.js"></script>