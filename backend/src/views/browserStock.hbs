{{{layout}}}

{{{body}}}

  {{#if resultado}}
    <h1 class="pb-4 fs-2">Resultado encontrado con: "{{title}}"</h1>
    <a class="btn btn-primary p-2 mb-3 fs-5" href="/stock">Volver</a>
    <table class="table">
    <thead>
      <tr class="table-primary">
        <th scope="col" class="text-center">ID</th>
        <th scope="col" class="text-center">Producto</th>
        <th scope="col" class="text-center">Descripción</th>
        <th scope="col" class="text-center">Cantidad</th>
        <th scope="col" class="text-center">Contenido c/u Producto</th>
        <th scope="col" class="text-center">Total Contenido</th>
        <th scope="col" class="text-center">Precio De Compra</th>
        <th scope="col" class="text-center">Valor del Stock</th>
        <th scope="col" class="text-center">#</th>
      </tr>
    </thead>
    <tbody>
      {{#each resultado}}
        <tr class="table-secondary">
          <th scope="row" class="text-center">{{this.id_material}}</th>
          <td class="text-center">{{this.name_material}}</td>
          <td class="text-center">{{this.description_material}}</td>
          <td class="text-center">{{this.amount_material}}</td>
          <td class="text-center">{{this.how_much_contains}}</td>
          <td class="text-center">{{this.total_amount_material}}</td>          
          <td class="text-center">${{this.buy_price_material}}</td>
          <td class="text-center">${{this.value_stock}}</td>
          <td class="text-center">
              <a type="button" class="btn btn-warning mb-2" href="/stock/update/{{this.id_material}}">Actualizar</a>
              <a type="button" class="btn btn-danger" href="/stock/delete/{{this.id_material}}">Eliminar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
    <h1 class="pb-4 fs-2">Resultado encontrado con: "{{title}}"</h1>
    <h2>No se encontro ningún/a "{{searchValue}}"" con "{{searchmaterial}}"" en la base datos</h2>
    <a class="btn btn-primary p-2 mb-3 fs-5" href="/stock">Volver</a>
  {{/if}}